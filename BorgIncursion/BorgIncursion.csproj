<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net7.0</TargetFramework>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
    <AssemblyName>Borg</AssemblyName>
    <PackageTags>reflection</PackageTags>
    <PackageId>borg-incursion</PackageId>
    <Authors>Pere Frontera</Authors>
    <Version>1.10.4</Version>
    <RepositoryUrl>https://github.com/pfrontera/BorgIncursion</RepositoryUrl>
    <PackageReadmeFile>README.md</PackageReadmeFile>
    <PackageProjectUrl>https://github.com/pfrontera/BorgIncursion</PackageProjectUrl>
    <RepositoryType>git</RepositoryType>
    <Copyright>Pere Frontera</Copyright>
    <PackageLicenseExpression>CC-BY-4.0</PackageLicenseExpression>
    <PackageIcon>icon.png</PackageIcon>
  </PropertyGroup>

  <ItemGroup>
    <None Include="../README.md" Pack="true" PackagePath=""/>
    <None Include="./assets/icon.png" Pack="true" PackagePath=""/>
  </ItemGroup>

</Project>
